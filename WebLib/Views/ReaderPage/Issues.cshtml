
@{
    ViewBag.Title = "Issues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<WebLib.Models.ReaderPages.ReaderIssueModel>

@section Sidebar {
    <div class="col-md-2" id="navbar">
        <nav class="sidebar">
            <ul class="list-unstyled navbar-list">
                <li class="navbar-list-item active-nav-item">
                    @Html.ActionLink("Личные данные", "Index", "ReaderPage")
                </li>
                <li class="navbar-list-item">
                    @Html.ActionLink("Библиотеки", "Libraries", "ReaderPage")
                </li>
                <li class="navbar-list-item">
                    @Html.ActionLink("Поиск книг", "Books", "ReaderPage")
                </li>
                <li class="navbar-list-item">
                    @Html.ActionLink("Настройки", "Settings", "ReaderPage")
                </li>
            </ul>
        </nav>
    </div>
}

<div class="col-md-10 col-md-offset-2">
    <div class="page-wrapper">

        <div class="row row-default">
            <div class="col-md-12">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="@Url.Action( "Index", "ReaderPage")" class="btn btn-default" style="cursor: pointer;">
                            <i class="fa fa-long-arrow-left"></i> <span style="margin-left: 5px;">Назад</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

            <div class="row row-default">
                <div class="col-md-12">
                    <div id="LibraryListTable">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Книга
                                    </th>
                                    <th>
                                        Дата выдачи
                                    </th>
                                    <th>
                                        Дата возврата
                                    </th>
                                    <th>
                                        Статус
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var issue in Model)
                                    {
                                        <tr>
                                            <td>
                                                @issue.Book.AuthorFullName "@issue.Book.Title"
                                            </td>
                                            <td>
                                                @issue.IssueDateString
                                            </td>
                                            <td>
                                                @issue.ReturnDateString
                                            </td>
                                            <td>
                                                @WebLib.Utils.Enums.GetDescription(issue.Status)
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td class="text-center" colspan="4">
                                            Нет данных
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>