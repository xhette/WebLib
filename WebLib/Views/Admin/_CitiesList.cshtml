@model IEnumerable<WebLib.Models.CityModel>

@{
    bool isView = false;

    if (TempData["IsAdminView"] != null)
    {
        isView = (bool)TempData["IsAdminView"];
    }
}

@if (isView)
{
    <div class="row row-default text-right">
        @Html.ActionLink("Добавить", "AddCity", "Admin", new { @class = "btn btn-primary" })
    </div>
}

    <div class="row row-default">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center">
                            ID
                        </th>
                        <th class="text-center">
                            Название
                        </th>
                        @if (isView)
                        {
                            <th class="text-center"></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @m.Id
                            </td>
                            <td class="text-center">
                                @m.Name
                            </td>
                            @if (isView)
                            {
                                <td class="text-center">
                                    @Html.ActionLink("Изменить", "EditCity", "Admin", new { id = m.Id }, null) |
                                    @Html.ActionLink("Удалить", "DeleteCity", "Admin", new { id = m.Id }, null)
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
