
@model IEnumerable<WebLib.Models.ReaderPages.BookViewModel>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            @if (ViewBag.TableHead != null && ViewBag.TableHead)
            {
            <thead>
                <tr>
                    <th>
                        Автор
                    </th>
                    <th>
                        Название
                    </th>
                    <th>
                        Отдел
                    </th>
                </tr>
            </thead>
            }
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var book in Model)
                {
                    <tr>
                        <td>
                            @book.AuthorFullName
                        </td>
                        <td>
                            "@book.Title"
                        </td>
                        <td>
                            @book.DepartmentName
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">
                        Нет данных
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>



