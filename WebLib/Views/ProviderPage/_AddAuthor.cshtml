@model WebLib.Models.AuthorModel

@using (Html.BeginForm("AddAuthor", "ProviderPage", null, FormMethod.Post))
{
    <input type="hidden" value="@ViewBag.Supply" name="supplyId" id="supplyId" />

    <div class="modal-header row">
        <h5 class="modal-title text-center" id="addAuthorModal">
            <span class="text-center">
                Добавить автора
            </span>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body row">
        <div class="control-group col-md-12 pull-left" style="min-height: 100px;">
            <label class="control-label" for="Surname">Фамилия</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Surname, new { @id = "Surname", @class = "form-control", @style = "min-width: 100%" })
                <p class="help-block">@Html.ValidationMessageFor(m => m.Surname, null, new { @class = "text-danger" })</p>
            </div>
            <label class="control-label" for="Name">Имя</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control", @style = "min-width: 100%" })
                <p class="help-block">@Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })</p>
            </div>
            <label class="control-label" for="Patronymic">Отчество</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Patronymic, new { @id = "Patronymic", @class = "form-control", @style = "min-width: 100%" })
                <p class="help-block">@Html.ValidationMessageFor(m => m.Patronymic, null, new { @class = "text-danger" })</p>
            </div>
        </div>
    </div>
    <div class="text-right modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
}
