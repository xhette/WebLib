@model IEnumerable<WebLib.Models.ProviderPages.OrderModel>

<div class="row" style="margin-top: 20px">
    <div class="col-md-12">

        <ul class="list-group">
            <li class="list-group-item text-right" style="max-width: 550px; border: none;">
                <a href="@Url.Action("AddOrder", "ProviderPage", new { supplyId = ViewBag.Supply }, null)">
                    <i class="fa fa-plus"></i> Добавить
                    @*@Html.ActionLink("Добавить", "AddOrder", "ProviderPage", new { supplyId = ViewBag.Supply }, null)*@
                </a>
            </li>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var order in Model)
                    {
                    <li class="list-group-item d-flex justify-content-between align-items-center" style="max-width: 550px">
                        @order.Author.FullName "@order.Book.Title"
                        <span class="badge badge-primary badge-pill" style="background-color:#337ab7;">@order.Cost руб.</span>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between" style="max-width: 550px">
                    <strong>Итого:</strong> @Model.Sum(c => c.Cost) руб.
                </li>
            }
            else
            {
                <li class="list-group-item text-center">
                    Нет данных
                </li>
            }
            </ul>
    </div>
</div>
