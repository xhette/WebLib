@model IEnumerable<WebLib.Models.ProviderPages.OrderModel>

    <ul class="list-group">
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var order in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center" style="max-width: 550px">
                    @order.Author.FullName "@order.Book.Title"
                    <span class="badge badge-primary badge-pill" style="background-color:#337ab7;">@order.Cost руб.</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between" style="max-width: 550px">
                <strong>Итого:</strong> @Model.Sum(c => c.Cost) руб.
            </li>
        }
        else
        {
            <li class="list-group-item text-center">
                Нет данных
            </li>
        }
    </ul>