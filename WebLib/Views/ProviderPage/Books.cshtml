
@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int page = ViewBag.SearchingType;
}

@section Sidebar {
    <div class="col-md-2" id="navbar">
        <nav class="sidebar">
            @{Html.RenderAction("SidebarPartial", "ProviderPage");}
            <div class="row">
                <ul class="list-unstyled employee-nav">
                    <li class="navbar-list-item">
                        @Html.ActionLink("Поставки", "Index", "ProviderPage")
                    </li>
                    <li class="navbar-list-item">
                        @Html.ActionLink("Магазины", "Shops", "ProviderPage")
                    </li>
                    <li class="navbar-list-item active-nav-item">
                        @Html.ActionLink("Книги", "Books", "ProviderPage")
                    </li>
                </ul>
            </div>
        </nav>
    </div>
}

<div class="col-md-10 col-md-offset-2">
    <div class="page-wrapper">

        <div class="row row-default">
            <div class="col-md-12">
                <ul class="nav nav-tabs">
                    <li class="" id="byTitle">
                        @Html.ActionLink("По названию", "Books", "ProviderPage", new { page = 1 }, null)
                    </li>
                    <li class="" id="byAuthor">
                        @Html.ActionLink("По автору", "Books", "ProviderPage", new { page = 2 }, null)
                    </li>
                </ul>
            </div>
        </div>

        @switch (page)
        {
            case 1:
                Html.RenderAction("BooksByTitle", "ProviderPage");
                break;
            case 2:
                Html.RenderAction("BooksByAuthor", "ProviderPage");
                break;
            default: break;
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var byTitle = $("#byTitle");
        var byAuthor = $("#byAuthor");

        byTitle.removeClass("active");
        byAuthor.removeClass("active");

        var page = @ViewBag.SearchingType;

        switch (page) {
            case 1: byTitle.addClass("active");
                break;
            case 2: byAuthor.addClass("active");
                break;
            default: break;
        }
    });
</script>


