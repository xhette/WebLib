
@{
    ViewBag.Title = "Войти";
}

<div class="container">
    <div class="row vertical-align">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" style="margin: 150px 0">
                <div class="panel-body">
                    <h3 class="text-center">Вход</h3>
                    <form class="form-signin text-center">
                        <div class="form-label-group">
                            <input type="text" id="inputLogin" class="form-control" placeholder="Логин" required autofocus>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" placeholder="Пароль" required>
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <label class="custom-control-label" for="rememberCheck">Запомнить пароль? </label>
                            <input type="checkbox" class="custom-control-input" id="rememberCheck">
                        </div>
                        <button class="btn btn-primary btn-lg" type="submit">Войти</button>
                        <p>
                            Нет аккаунта? <a>Зарегистрироваться</a>.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

